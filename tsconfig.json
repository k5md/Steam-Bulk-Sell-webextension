{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "ESNext",
    "target": "es2015",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "removeComments": true,
    "baseUrl": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "src/*": ["./src/*"]
    },
    "lib": [ "es6", "es7", "dom", "esnext" ]
  },
  "include": [
    "**/src/**/*.tsx",
    "**/src/**/*.ts",
  ],
  "exclude": ["dist", "build", "node_modules"]
}